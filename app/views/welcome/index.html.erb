<div class="container">
    <div class="row">
        <div class="col-sm-4">
        	<div class="col-xs-12">
        		<center>
					<%= image_tag("logo.jpg", class: "img-responsive img-rounded") %>
					<h1>A Long Term Reminder</h1>
        		</center>
        	</div>
            
            <%= form_for @message, url: {action: "create"}, html: { onsubmit:"return validator();" }  do |f| %>
             
			<div class="col-xs-12">
            	<div class="form-group">
					<label>Name</label>
                    <%= f.text_field :name, required: true, class: "form-control" %>
                </div>
          	</div>
          
			<div class="col-xs-12">
            	<div class="form-group">
                	<label>E-mail</label>
                    <%= f.text_field :email, required: true, class: "form-control email" %>
        	</div>
            </div>

			<div class="col-xs-12">
                <div class="form-group">
					<label>Send On </label>
					</br>
					<div class="btn-group btn-group-xs">
						<button type="button" class="btn-sm btn-primary" onclick="addTime(1, 'month')">1 Month</button>
						<button type="button" class="btn-sm btn-primary" onclick="addTime(3, 'months')">3 Months</button>
						<button type="button" class="btn-sm btn-primary" onclick="addTime(6, 'months')">6 Months</button>
						<button type="button" class="btn-sm btn-primary" onclick="addTime(1, 'year')">1 Year</button>
					</div>
					<h6>(You can type the date or pick a suggestion)</h6>
                </div>
			</div>

			<div class="col-xs-12">   
				<div class="form-group">
					<%= f.text_field :send_on, required: true, class: "form-control date", placeholder:"DD/MM/YYYY" %>
				</div>
			</div>    	

			<div class="col-xs-12">
				<div class="form-group">
					<label>Message Content</label>
					<%= f.text_area :content, required: true, class: "form-control", placeholder:"Your plan goes here" %>
				</div>
				<%= f.submit "Create", class: "btn btn-primary" %>
			</div>
               
        	<div class="col-xs-12">     
                <div id="msg">
                    <%= flash[:alert] %>
                </div>
                <div id="msg_success">
                    <%= flash[:success] %>
                </div>
            </div>
        <% end %>
        </div>
        <div class="col-sm-8">
            <div class="col-lg-12 col-md-12 col-xs-12 col-xs-12">
            	<div onclick="fillExample('Start the LaTeR project.')" class="hovereffect">
                    <%= image_tag("example3.jpg", class: "img-responsive img-rounded") %>
                    <div class="overlay">
                       <h2>Don't have time to work on that project now? </h2>
                    </div>
                </div>

                <div class="col-xs-12" style="height:10px;"></div>
                
                <div onclick="fillExample('Go to Japan.')" class="hovereffect">
                    <%= image_tag("example1.jpg", class: "img-responsive img-rounded") %>
                    <div class="overlay">
                       <h2>No money to travel now?</h2>
                    </div>
                </div>

                <div class="col-xs-12" style="height:10px;"></div>

                <div onclick="fillExample('Start the Learn How to Learn course on Coursera.')" class="hovereffect">
                    <%= image_tag("example2.jpg", class: "img-responsive img-rounded") %>
                    <div class="overlay">
                       <h2>That subject you want to learn about but don't have time now. </h2>
                    </div>
                </div>

                <div class="col-xs-12" style="height:10px;"></div>                
				
                <div onclick="fillExample('Learn how to play guitar')" class="hovereffect">
                    <%= image_tag("example4.jpg", class: "img-responsive img-rounded") %>
                    <div class="overlay">
                       <h2> Wish you could play guitar?</h2>
                    </div>
                </div>              

            </div>
        </div>
    </div>
</div>
